
{% extends "base.html.twig" %}
{% block container %}
    {% for post in posts %}
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
              <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                  <a class="text-dark" href="{{path('viewPost',{id: post.id})}}">{{ post.title}}</a>
                </h3>
                <div class="mb-1 text-muted">{{post.data_creacio}}</div>
                <p class="card-text mb-auto">{{post.content}}</p>
                <a href="{{path('viewPost',{id: post.id})}}">Continue reading</a>
              </div>
            </div>
          </div>
    {% endfor %}
{% endblock %}
