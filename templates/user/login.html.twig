{% extends "base.html.twig" %}

{% block container %}
        {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        {% block singin %}
            <div class="col-md-6">
                <h3 class="text-center">¿Es tu Primera vez aquí?</h3>
                <a href="{{path('register')}}">Registrate</a>
            </div>
        {% endblock %}
        {% block login %}
            <div class="col-md-6">
                <h3 class="text-center">Log In</h3>
                <form class="container" action="{{path('login-user')}}" method="POST">
                    <div class="form-group">
                      <label for="username">Usuario</label>
                      <input type="text" class="form-control" id="username" aria-describedby="emailHelp" name="_username" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                      <label for="password">Contraseña</label>
                      <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        {% endblock %}
{% endblock %}
