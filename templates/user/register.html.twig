{% extends 'base.html.twig' %}
{% form_theme form _self %}

{% block container %}
    <div class="container row justify-content-center">
        <div class="col-md-6">
            {% block registerUserTitle %}
            <h2 class="text-center">Sign up, please</h2>
            {% endblock %}
            {{ form_start(form)}}

            {{form_widget(form) }}
               {{form_end(form) }}           
           {{form_errors(form)}}   
        </div>
             
    </div>
{% endblock %}

{% block form_errors %}
{% if errors|length >0 %}
    <ul>
        {% for error in errors %}
        <li class="error-message">{{error.message}}</li>
        {% endfor %}
        </ul>
{%endif%}    
{% endblock form_errors %}
