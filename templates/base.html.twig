{% block html %}
<!DOCTYPE html>
<html>
    {% block head %}
    <head>
        <meta charset="UTF-8">
        <title>Blog!</title>
        {% block stylesheets %}
            
            <link rel="stylesheet" href="{{asset('assets/css/bootstrap.css')}}"/>
            <link rel="stylesheet" href="{{asset('assets/css/bootstrap-tagsinput.css')}}"/>
            <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">        
        {% endblock %}
    </head>
    {% endblock %}
    {% block body %}
        <body>
            <div class="container">
                {% block header %}
                    <header>
                        <div class="row flex-nowrap justify-content-between align-items-center">
                            <div class="col-4 pt-1">
                                <nav class="navbar navbar-expand-lg navbar-light">
                                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                        {% if app.user %}
                                        <ul class="navbar-nav mr-auto">
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                  <i class="fa fa-edit fa-2x"></i>
                                                </a>
                                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                    <a class="dropdown-item" href="{{path('AddPost')}}">AÃ±adir post</a>
                                                    <div class="dropdown-divider"></div>
                                                        <a class="dropdown-item" href="{{path('postindex')}}">Administrar Posts</a>
                                                    </div>
                                            </li>
                                            <li class="nav-item dropdown">
                                                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fa fa-users fa-2x"></i>
                                                  </a>
                                                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                      <a class="dropdown-item" href="{{path("EditUser",{"id":app.user.id})}}">Editar Mi Perfil</a>
                                                      <div class="dropdown-divider"></div>
                                                      <a class="dropdown-item" href="{{path('ViewUsers')}}">Administrar usuarios</a>
                                                  </div>
                                            </li>
                                          {% endif %}
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                            <div class="col-4 text-center">
                              {% block title %}
                                      <a href="{{path("home")}}" class="nav-link">
                                          <h1 class="page_title">Blogendo</h1>
                                          <em>Bloguea sin Complicaciones</em>
                                      </a>
                              {% endblock %}
                            </div>
                            <div class="col-4 d-flex justify-content-end align-items-center">
                                {% if app.user %}
                                    <a href="{{path("logout")}}" class="text-muted">
                                        <i class="fa fa-power-off fa-3x"></i>
                                    </a>
                                    {% else %}
                                        <a href="{{path("login")}}" class="text-muted">
                                            <i class="fa fa-user fa-3x"></i>
                                        </a>
                                    {% endif %}
                            </div>
                        </div>
                    </header><!-- /header -->
                {% endblock %}
                {% block containerglobal %}
                    <div class="row mb-2"/>
                        {% block container %}
                            {# Silence is Golden... #}
                        {% endblock %}
                    </div>
                {% endblock %}
                {% block footer %}
                    
                {% endblock %}
                
                {% block javascripts %}
                    <script type="text/javascript">
                        var URL="{{ app.request.getSchemeAndHttpHost() }}/";
                    </script>
                    <script src="{{asset("assets/js/jquery.js")}}"></script>
                    <script src="{{asset("assets/js/main.js")}}"></script>
                    <script src="{{asset("assets/js/bootstrap.min.js")}}"></script>
                    <script src="{{asset("assets/js/bootstrap.bundle.min.js")}}"></script>
                {% endblock %}
            </div>
        </body>
    {% endblock %}
</html>
{% endblock %}
